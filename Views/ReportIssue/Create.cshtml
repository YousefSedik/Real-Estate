@model RealStats.ViewModel.ReportIssueViewModel
@{
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6"> <!-- This will limit the width to 50% on medium screens -->
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="issueDescription">Issue Title</label>
                    <input class="form-control" asp-for="Title" />
                </div>
                <div class="form-group">
                    <label for="issueDescription">Issue Description</label>
                    <textarea class="form-control" id="issueDescription" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                
            </form>
        </div>
    </div>
</div>
